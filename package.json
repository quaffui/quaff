{
  "name": "@quaffui/quaff",
  "version": "0.1.0-prealpha21",
  "scripts": {
    "dev": "vite dev",
    "open": "vite dev --open",
    "build": "vite build && bun run package && bun run build:css",
    "build:css": "vite build --config vite.config.scss.ts",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepublishOnly": "bun run build",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test:unit": "vitest",
    "lint": "prettier --plugin prettier-plugin-svelte . --check . && eslint .",
    "format": "prettier --plugin prettier-plugin-svelte . --write . && eslint . --fix",
    "docgen-props": "bun scripts/docgenProps.ts",
    "colorgen": "bun scripts/colorgen.ts",
    "docgen-snippets": "bun scripts/docgenSnippets.ts",
    "write-version": "bun scripts/writeVersion.ts"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    },
    "./css/*": "./dist/css/*"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "peerDependencies": {
    "shiki": "^1.23.0"
  },
  "devDependencies": {
    "@fontsource/roboto": "^5.1.0",
    "@sveltejs/adapter-auto": "^3.3.1",
    "@sveltejs/kit": "^2.8.1",
    "@sveltejs/package": "^2.3.7",
    "@sveltejs/vite-plugin-svelte": "^3.1.2",
    "@types/bun": "^1.1.13",
    "@types/prettier": "^3.0.0",
    "@types/prismjs": "^1.26.5",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import-x": "^4.4.2",
    "eslint-plugin-svelte": "^2.46.0",
    "eslint-plugin-unicorn": "^55.0.0",
    "estree-walker": "^3.0.3",
    "globals": "^15.12.0",
    "magic-string": "^0.30.12",
    "material-symbols": "^0.23.0",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.2.8",
    "publint": "^0.2.12",
    "sass": "^1.81.0",
    "svelte": "^5.2.1",
    "svelte-check": "^4.0.8",
    "svelte-eslint-parser": "^0.41.1",
    "tslib": "^2.8.1",
    "typescript": "^5.6.3",
    "vite": "^5.4.11",
    "vitest": "^2.1.5"
  },
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "dependencies": {
    "@material/material-color-utilities": "^0.3.0"
  }
}
