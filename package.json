{
  "name": "@quaffui/quaff",
  "version": "0.1.0-prealpha20",
  "scripts": {
    "dev": "vite dev",
    "open": "vite dev --open",
    "build": "vite build && bun run package && bun run build:css",
    "build:css": "vite build --config vite.config.scss.ts",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepublishOnly": "bun run build",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test:unit": "vitest",
    "lint": "prettier --plugin prettier-plugin-svelte . --check . && eslint .",
    "format": "prettier --plugin prettier-plugin-svelte . --write .",
    "docgen-props": "bun scripts/docgenProps.ts",
    "colorgen": "bun scripts/colorgen.ts",
    "docgen-snippets": "bun scripts/docgenSnippets.ts",
    "write-version": "bun scripts/writeVersion.ts"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    },
    "./css/*": "./dist/css/*"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "peerDependencies": {
    "svelte": "^4.0.0"
  },
  "devDependencies": {
    "@fontsource/roboto": "^5.1.0",
    "@material/material-color-utilities": "^0.3.0",
    "@sveltejs/adapter-auto": "^3.2.5",
    "@sveltejs/kit": "^2.5.28",
    "@sveltejs/package": "^2.3.5",
    "@sveltejs/vite-plugin-svelte": "^3.1.2",
    "@types/bun": "^1.1.11",
    "@types/prettier": "^3.0.0",
    "@types/prismjs": "^1.26.4",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import-x": "^4.3.0",
    "eslint-plugin-svelte": "^2.44.0",
    "eslint-plugin-unicorn": "^55.0.0",
    "estree-walker": "^3.0.3",
    "globals": "^15.9.0",
    "magic-string": "^0.30.11",
    "material-symbols": "^0.23.0",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.2.6",
    "publint": "^0.2.11",
    "sass": "^1.79.3",
    "shiki": "^1.21.0",
    "svelte": "5.0.0-next.257",
    "svelte-check": "^4.0.3",
    "svelte-eslint-parser": "^0.41.1",
    "tslib": "^2.7.0",
    "typescript": "^5.6.2",
    "vite": "^5.4.7",
    "vitest": "^2.1.1"
  },
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module"
}
